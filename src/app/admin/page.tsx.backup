'use client';

import React, { useState, useEffect } from 'react';
import { useAuth } from '../../hooks/useAuth';
import Navigation from '../../components/Navigation';

interface ImportStatus {
  towers: number;
  counties: number;
  status: string;
}

const AdminPage: React.FC = () => {
  const { user, loading } = useAuth();
  const [importStatus, setImportStatus] = useState<ImportStatus | null>(null);
  const [importing, setImporting] = useState(false);
  const [message, setMessage] = useState('');

  useEffect(() => {
    fetchStatus();
  }, []);

  const fetchStatus = async () => {
    try {
      const response = await fetch('/api/admin/import');
      const data = await response.json();
      setImportStatus(data);
    } catch (error) {
      console.error('Error fetching status:', error);
      setMessage('Error fetching import status');
    }
  };

  const handleImport = async (action: string) => {
    setImporting(true);
    setMessage('');

    try {
      const response = await fetch('/api/admin/import', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({ action }),
      });

      const data = await response.json();

      if (response.ok) {
        setMessage(`‚úÖ ${data.message}`);
        await fetchStatus(); // Refresh status
      } else {
        setMessage(`‚ùå Import failed: ${data.error}`);
      }
    } catch (error) {
      console.error('Import error:', error);
      setMessage('‚ùå Import request failed');
    } finally {
      setImporting(false);
    }
  };

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600"></div>
      </div>
    );
  }

  // For development, allow any authenticated user to access admin (remove in production)
  if (!user) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <h1 className="text-2xl font-bold text-red-600 mb-4">Access Denied</h1>
          <p className="text-gray-600">Please log in to access admin features</p>
        </div>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50">
      <Navigation />
      
      <div className="max-w-4xl mx-auto px-4 py-8">
        <div className="bg-white rounded-lg shadow-md p-6">
          <h1 className="text-2xl font-bold text-gray-900 mb-6">
            üîß Admin Dashboard - UK Water Towers Import
          </h1>

          {/* Current Status */}
          <div className="mb-8">
            <h2 className="text-lg font-semibold mb-4">Current Database Status</h2>
            {importStatus ? (
              <div className="grid grid-cols-2 gap-4">
                <div className="bg-blue-50 p-4 rounded-lg">
                  <div className="text-2xl font-bold text-blue-600">
                    {importStatus.towers}
                  </div>
                  <div className="text-sm text-blue-800">Water Towers</div>
                </div>
                <div className="bg-green-50 p-4 rounded-lg">
                  <div className="text-2xl font-bold text-green-600">
                    {importStatus.counties}
                  </div>
                  <div className="text-sm text-green-800">Counties</div>
                </div>
              </div>
            ) : (
              <div className="animate-pulse bg-gray-200 h-20 rounded-lg"></div>
            )}
          </div>

          {/* Database Management */}
          <div className="mb-6">
            <h2 className="text-lg font-semibold mb-4">Database Management</h2>
            <div className="space-y-4">
              <div>
                <button
                  onClick={() => handleImport('clear_database')}
                  disabled={importing}
                  className="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed mr-4"
                >
                  {importing ? 'Clearing...' : 'Clear Database'}
                </button>
                <span className="text-sm text-gray-600">
                  Remove all water towers and start fresh (cannot be undone)
                </span>
              </div>
            </div>
          </div>

          {/* Database Migration */}
          <div className="bg-white rounded-lg shadow p-6 mb-6">
            <h2 className="text-xl font-semibold mb-4">Database Migration</h2>
            <div className="space-y-4">
              <div>
                <button
                  onClick={() => handleImport('run_migration')}
                  disabled={importing}
                  className="bg-purple-600 text-white px-6 py-3 rounded-lg hover:bg-purple-700 disabled:opacity-50 disabled:cursor-not-allowed mr-4"
                >
                  {importing ? 'Running...' : 'Run Comments Migration'}
                </button>
                <span className="text-sm text-gray-600">
                  Create tower_comments table for ratings and reviews functionality
                </span>
              </div>
            </div>
          </div>

          {/* Import Actions */}
          <div className="bg-white rounded-lg shadow p-6 mb-6">
            <h2 className="text-xl font-semibold mb-4">Import Actions</h2>
            <div className="space-y-4">
              <div>
                <button
                  onClick={() => handleImport('clear_database')}
                  disabled={importing}
                  className="bg-red-600 text-white px-6 py-3 rounded-lg hover:bg-red-700 disabled:opacity-50 disabled:cursor-not-allowed mr-4"
                >
                  {importing ? 'Clearing...' : 'Clear Database'}
                </button>
                <span className="text-sm text-gray-600">
                  Remove all tower data from the database
                </span>
              </div>

          {/* Status Message */}
          {message && (
            <div className={`p-4 rounded-lg mb-6 ${
              message.includes('‚úÖ') 
                ? 'bg-green-50 text-green-800 border border-green-200' 
                : 'bg-red-50 text-red-800 border border-red-200'
            }`}>
              {message}
            </div>
          )}

          {/* Import Progress */}
          {importing && (
            <div className="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
              <div className="flex items-center">
                <div className="animate-spin rounded-full h-4 w-4 border-b-2 border-yellow-600 mr-3"></div>
                <span className="text-yellow-800">
                  Import in progress... This may take several minutes for large datasets.
                </span>
              </div>
            </div>
          )}

          {/* Refresh Button */}
          <div className="mt-6 pt-6 border-t border-gray-200">
            <button
              onClick={fetchStatus}
              className="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700"
            >
              üîÑ Refresh Status
            </button>
          </div>
        </div>

        {/* Instructions */}
        <div className="mt-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h3 className="text-lg font-semibold text-blue-900 mb-3">
            üìã Import Instructions
          </h3>
          <ul className="text-blue-800 space-y-2">
            <li>‚Ä¢ <strong>Sample Data:</strong> Start with London area towers to test the system</li>
            <li>‚Ä¢ <strong>Full UK Import:</strong> Imports all water towers from across the United Kingdom</li>
            <li>‚Ä¢ <strong>Database Schema:</strong> The system uses UK counties and handles duplicates automatically</li>
            <li>‚Ä¢ <strong>Performance:</strong> UK imports typically take 2-10 minutes depending on region size</li>
          </ul>
        </div>
      </div>
    </div>
  );
};

export default AdminPage;